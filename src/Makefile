# Variables
EXE=reversi

# Usual compilation flags
CFLAGS=-std=c11 -Wall -Wextra -g -O2
CPPFLAGS=-I../include -DDEBUG
LDFLAGS=-lm

# Special rules and targets
.PHONY: all clean help

# Rules and targets
all: $(EXE)

$(EXE): $(EXE).o
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

clean:
	@rm -f *~ *.o $(EXE)

help:
	@echo "Usage:"
	@echo " make [all]\t\tBuild the software"
	@echo " make clean\t\tRemove all files generated by make" @echo " make help\t\tDisplay this help"
